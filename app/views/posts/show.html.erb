
<div class="row">
<h1 class="title">
    <%= @post.title %>
</h1>

<p>
    Submitted <%= time_ago_in_words(@post.created_at) %> ago.
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delet', post_path(@post), method: :delete,data:{confirm:'Are you sure'} %>
</p>

<p>
    <%= @post.body %>
</p>
</div>
