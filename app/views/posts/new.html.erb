
<div class="row">
<h1>New Post</h1>

<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <div class="alert">
            <p><%= pluralize(@post.errors.count, "error") %> prevented post from saveing</p>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :title %><br/>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
</p>

<%= f.submit %>
<% end %>
</div>
